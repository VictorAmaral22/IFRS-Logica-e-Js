//Crie um programa de calcula a velocidade média de um corredor que percorreu x metros em x segundos usando a fórmula 
// - valocidade = distância/tempo


function vmedia( distancia, tempo){
     var d = parseInt(prompt("Digite a distância percorrida pelo corredor: "));
     var t = parseInt(prompt("Digite o tempo em que o corredor correu: "));
     var v = d/t;  
     alert(v);
}
vmedia();

//OUTRO PROGRAMA

function troco( preco, pago){
     var preco = parseInt(prompt("Digite o preço do produto: ")); 
     var pago = parseInt(prompt("Digite o que foi pago: "));
     var troco = 0;
     if( preco == pago ){
       alert("O cliente pagou o valor exato do produto.");
     }
     if( preco > pago ){
       troco = preco-pago;
       alert("O cliente lhe deve R$"+troco+".");
     }
     if( preco < pago ){
       troco = pago-preco;
       alert("Tu deves cliente R$"+troco+" ao cliente.");
     }
}
troco();


