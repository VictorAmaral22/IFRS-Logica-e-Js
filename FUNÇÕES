//FUNÇÕES

function Calcula_IMC(peso, altura){
     imc=peso/(altura*altura);
     return imc;
}
var p = parseInt(prompt("Peso"));
var a = parseInt(prompt("Peso"));
var meuIMC = Calcula_IMC(p, a);
alert("Meu IMC é "+meuIMC);

